#fetching input
with open('puzzle1_input.txt') as f:
	data_prelim=[int(line) for line in f.readlines()]

#modified list with threes added
i=0
data=[]
for num in data_prelim:
	if (i+2) < len(data_prelim):
		a=num+data_prelim[i+1]+data_prelim[i+2]
		data.append(a)
		i+=1

#counting the number of increases
count=0
i=-1
for num in data:
	if i!=-1:
		if num > data[i]:
			count+=1
	i+=1

print(count)
